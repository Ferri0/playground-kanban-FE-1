{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "jsx": "react-jsx",
        "outDir": "./dist",
        "rootDir": "./",
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "typeRoots": ["node_modules/@types", "src/typings"],
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "types": ["node", "jest", "@testing-library/jest-dom"]
}
